<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryListActivity"
    android:background="@drawable/fourthpantalla">

    <Button
        android:id="@+id/button_inventory_january"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:cornerRadius="15dp"
        android:text="@string/inventario_enero"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_inventory_february"
       android:layout_marginTop="180dp"
        app:strokeColor="@color/white"
        style="?attr/materialButtonOutlinedStyle"/>

    <Button
        android:id="@+id/button_inventory_february"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/inventario_febrero"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@id/button_inventory_march"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_inventory_january"

        app:strokeColor="@color/white" />

    <Button
        android:id="@+id/button_inventory_march"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/inventario_marzo"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/button_inventory_april"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_inventory_february"
        app:strokeColor="@color/white" />

    <Button
        android:id="@+id/button_inventory_april"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/inventario_abril"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_inventory_march"
        android:layout_marginBottom="100dp"
        app:strokeColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>